.categorylist {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  background-color: white;
}
.categorylist .ca_left {
  width: 130rpx;
  height: 100vh;
  border-right: 1rpx solid #bebebe;
}
.categorylist .ca_left .l_item {
  width: 100%;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
}
.categorylist .ca_left .changed_chunk {
  color: #ab956d;
}
.categorylist .ca_left .changed_chunk::before {
  content: "";
  position: absolute;
  left: 0;
  width: 7rpx;
  height: 80rpx;
  background-color: #ab956d;
}
.categorylist .ca_right {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  padding: 0 30rpx;
  padding-top: 30rpx;
}
.categorylist .ca_right .pr_list {
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.categorylist .ca_right .pr_list .product_item {
  margin-top: 20rpx;
  width: 170rpx;
  height: 210rpx;
}
.categorylist .ca_right .pr_list .product_item .pr_img {
  width: 170rpx;
  height: 170rpx;
}
.categorylist .ca_right .pr_list .product_item .pr_img image {
  width: 100%;
  height: 100%;
}
.categorylist .ca_right .pr_list .product_item .pr_name {
  font-size: 24rpx;
  width: 170rpx;
  height: 40rpx;
  text-align: center;
  line-height: 40rpx;
}
.categorylist .ca_right .theme_img {
  width: 100%;
  height: 200rpx;
}
.categorylist .ca_right .theme_img image {
  width: 100%;
  height: 100%;
}
.categorylist .ca_right .tittle {
  color: #ab956d;
  margin-top: 20rpx;
  text-align: center;
  font-size: 28rpx;
}
.categorylist .ca_right .tittle text::after, .categorylist .ca_right .tittle text::before {
  content: "";
  display: inline-block;
  position: relative;
  top: -6rpx;
  width: 70rpx;
  height: 2rpx;
  margin: 0 20rpx;
  background-color: #ab956d;
}

